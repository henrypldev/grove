{
	"name": "grove",
	"private": true,
	"workspaces": [
		"server",
		"cli"
	],
	"scripts": {
		"server": "bun run --cwd server start",
		"dev": "bun run --cwd server dev",
		"cli": "bun run --cwd cli dev",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@types/bun": "latest"
	}
}
